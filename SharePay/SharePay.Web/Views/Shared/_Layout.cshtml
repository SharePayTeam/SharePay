<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!-- Favicons -->
    <link rel="apple-touch-icon" href="../assets/img/apple-icon.png">
    <link rel="icon" href="../assets/img/favicon.png">

    @if (ViewBag.MetaTags != null)
    {
        <!-- for Web -->
        <title>@ViewBag.MetaTags.SiteTitle</title>
        <link rel='image_src' href='@ViewBag.MetaTags.MetaImageUrl' />
        <meta name="description" content="@ViewBag.MetaTags.MetaDescription" />
        <meta name="keywords" content="@ViewBag.MetaTags.SiteKeyWords" />
        <link rel="canonical" href="@ViewBag.MetaTags.MetaUrl" />

        <meta name="author" content="BigFootCrew" />
        <meta name="copyright" content="Sluchaen Tuning - @DateTime.Now.Year" />
        <meta name="application-name" content="Sluchaen Tuning" />

        <!-- for Facebook -->
        <meta property="og:title" content="@ViewBag.MetaTags.SiteTitle" />
        <meta property="og:type" content="article" />
        <meta property="og:image" content="@ViewBag.MetaTags.MetaImageUrl" />
        <meta property="og:image:type" content="image/png">
        <meta property="og:image:width" content="1024">
        <meta property="og:image:height" content="780">
        <meta property="og:url" content="@ViewBag.MetaTags.MetaUrl" />
        <meta property="og:description" content="@ViewBag.MetaTags.MetaDescription" />

        <!-- for Twitter -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content="@ViewBag.MetaTags.SiteTitle" />
        <meta name="twitter:description" content="@ViewBag.MetaTags.MetaDescription" />
        <meta name="twitter:image" content="@ViewBag.MetaTags.MetaImageUrl" />
    }
    else
    {
        <!-- for Web -->
        <title>SharePay - Payment sharing platform</title>
        <link rel='image_src' href='http://s-diag.com/Content/Images/article_image.png' />
        <meta name="description" content="SharePay - Sharing payments has never been easier. SharePay also alows you to collect recuring payments or to split payment in more than 1 payment transactions." />
        <meta name="keywords" content="SharePay, Payment, Share, Split payment, Recuring payment, transfer money" />
        <link rel="canonical" href="http://sharepay.com/" />

        <meta name="author" content="BigFootCrew" />
        <meta name="copyright" content="SharePay - @DateTime.Now.Year" />
        <meta name="application-name" content="SharePay" />

        <!-- for Facebook -->
        <meta property="og:title" content="SharePay - Payment sharing platform" />
        <meta property="og:type" content="article" />
        <meta property="og:image" content="http://s-diag.com/Content/Images/article_image.png" />
        <meta property="og:image:type" content="image/png">
        <meta property="og:image:width" content="1024">
        <meta property="og:image:height" content="780">
        <meta property="og:url" content="http://sharepay.com/" />
        <meta property="og:description" content="SharePay - Sharing payments has never been easier. SharePay also alows you to collect recuring payments or to split payment in more than 1 payment transactions." />

        <!-- for Twitter -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content="SharePay - Payment sharing platform" />
        <meta name="twitter:description" content="SharePay - Sharing payments has never been easier. SharePay also alows you to collect recuring payments or to split payment in more than 1 payment transactions." />
        <meta name="twitter:image" content="http://s-diag.com/Content/Images/article_image.png" />
    }


    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    @Styles.Render("~/Content/css")
</head>
<body class="">
    <div class="wrapper">
        <div class="sidebar" data-color="green" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            <div class="logo">
                <a href="@Url.Action("Index","Dashboard")" class="simple-text logo-mini" style="width:46px">
                    <img src="../assets/img/logo-small.png" style="height:40px" />
                </a>
                <a href="@Url.Action("Index","Dashboard")" class="simple-text logo-normal">
                    <img src="../assets/img/logo-dark.png" style="height:40px" />
                </a>
            </div>
            <div class="sidebar-wrapper">
                <div class="user">
                    <div class="photo">
                        <img src="../assets/img/avatar.jpg" />
                    </div>
                    <div class="user-info">
                        <a data-toggle="collapse" href="#collapseExample" class="username">
                            <span>
                                Krasimir Vasilev
                                <b class="caret"></b>
                            </span>
                        </a>
                        <div class="collapse" id="collapseExample">
                            <ul class="nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">
                                        <span class="sidebar-mini"> EP </span>
                                        <span class="sidebar-normal"> Edit Profile </span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Logout", "Account")">
                                        <span class="sidebar-mini"> L </span>
                                        <span class="sidebar-normal"> Logout </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <ul class="nav">
                    <li class="nav-item active ">
                        <a class="nav-link" href="@Url.Action("Index","Dashboard")">
                            <i class="material-icons">dashboard</i>
                            <p> Dashboard </p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" data-toggle="collapse" href="#paymentRequests">
                            <i class="material-icons">content_paste</i>
                            <p>
                                Payment Requests
                                <b class="caret"></b>
                            </p>
                        </a>
                        <div class="collapse" id="paymentRequests">
                            <ul class="nav">
                                <li class="nav-item ">
                                    <a class="nav-link" href="@Url.Action("Index","Dashboard")">
                                        <span class="sidebar-mini"> PRL </span>
                                        <span class="sidebar-normal"> Payment Requests List </span>
                                    </a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link" href="@Url.Action("Index","Dashboard")">
                                        <span class="sidebar-mini"> AN </span>
                                        <span class="sidebar-normal"> Add New </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" data-toggle="collapse" href="#accountBalances">
                            <i class="material-icons">timeline</i>
                            <p> 
                                Account Balance 
                                <b class="caret"></b> 
                            </p>

                        </a>
                        <div class="collapse" id="accountBalances">
                            <ul class="nav">
                                <li class="nav-item ">
                                    <a class="nav-link" href="@Url.Action("Index","Dashboard")">
                                        <span class="sidebar-mini"> VB </span>
                                        <span class="sidebar-normal"> View Balances </span>
                                    </a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link" href="@Url.Action("Index","Dashboard")">
                                        <span class="sidebar-mini"> CB </span>
                                        <span class="sidebar-normal"> Charge Balance </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent  navbar-absolute fixed-top">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-minimize">
                            <button id="minimizeSidebar" class="btn btn-just-icon btn-white btn-fab btn-round">
                                <i class="material-icons text_align-center visible-on-sidebar-regular">more_vert</i>
                                <i class="material-icons design_bullet-list-67 visible-on-sidebar-mini">view_list</i>
                            </button>
                        </div>
                        <a class="navbar-brand" href="#pablo">Dashboard</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                        <form class="navbar-form">
                            <div class="input-group no-border">
                                <input type="text" value="" class="form-control" placeholder="Search...">
                                <button type="submit" class="btn btn-white btn-round btn-just-icon">
                                    <i class="material-icons">search</i>
                                    <div class="ripple-container"></div>
                                </button>
                            </div>
                        </form>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index","Dashboard")">
                                    <i class="material-icons">dashboard</i>
                                    <p>
                                        <span class="d-lg-none d-md-block">Dashboard</span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">person</i>
                                    <p>
                                        <span class="d-lg-none d-md-block">Account</span>
                                    </p>
                                </a>
                                @*@Html.Partial("_LoginPartial")*@
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="#pablo">Edit Profile</a>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Account")">Log out</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="footer ">
                <div class="container">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="@Url.Action("Index","Dashboard")">
                                    SharePay
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="copyright pull-right">
                        &copy;
                        @DateTime.Now.Year
                    </div>
                </div>
            </footer>
        </div>
    </div>
</body>


@Scripts.Render("~/bundles/jquery")
<script src="https://cdnjs.cloudflare.com/ajax/libs/core-js/2.4.1/core.js"></script>
@Scripts.Render("~/bundles/theme")
@RenderSection("scripts", required: false)
<script type="text/javascript">
    $(document).ready(function () {
        
        // Javascript method's body can be found in assets/js/demos.js
        demo.initDashboardPageCharts();

        demo.initCharts();

    });
</script>
</html>
